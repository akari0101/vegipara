<div class="container">
  <div class="row mt-4">
    <h2>ジャンル編集</h2>
  </div>

  <div class="row mt-3">
    <%= form_with model: @genre, url: genre_path do |f| %>
      <%= f.label "ジャンル名" %>
      <%= f.text_field :name, class: "ml-5" %>
      <%= f.submit '変更を保存', class: "btn btn-success ml-5" %>
    <% end %>
  </div>
</div>