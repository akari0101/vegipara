<div class="container">
  <div class="row text-right mt-4">
    <h4 class="col-sm-2">出品商品一覧</h4>
    <div class ="col-sm-10">
      <%= link_to new_product_path do %>
       <i class="fas fa-plus-square fa-2x"></i>
      <% end %>

    </div>
  </div>
<div class="row">
 <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品id</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>販売ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <%=link_to admins_items_path(item.id) do %>
            <%=item.name%>
          <%end%>
          </td>
        <td><%=item.price%></td>
        <td><%=item.genre.name%></td>
        <td><% if item.is_active == false %>
              <p class="color text-success", style="margin:0">販売中</p>
            <% else %>
              <p class="color text-secondary", style="margin:0">販売停止中</p>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
 </table>
</div>