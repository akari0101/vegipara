<div class="container">
 <div class="row my-5">
  <div class="col-sm-5 offset-1">
    <h3>出品商品詳細</h3>
    <%= image_tag @product.image, size: '300x200' %>
  </div>
  <div class="col-sm-6">
   <table class="table table-borderless">
    <tbody>
     <tr>
       <td>商品名</td>
       <td><%= @product.name %></td>
     </tr>
     <tr>
       <td>商品説明</td>
       <td><%= @product.introduction %></td>
     </tr>
     <tr>
       <td>ジャンル</td>
       <td><%= @product.genre.name %></td>
     </tr>
     <tr>
       <td>税込価格(税抜価格)</td>
       <td><%= @product.with_tax_price.to_s(:delimited) %>(<%=@product.price%>)円</td>
     </tr>
     <tr>
       <td>販売ステータス</td>
       <td><% if @product.is_active == false %>
             販売中
             <% else %>
             販売停止中
           <% end %></td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
 <div class="row mb-3">
   <div class="col-sm-12">
     <div class="text-center">
       <%= link_to "編集する", edit_product_path(@product.id), class: 'btn btn-success col-sm-2' %>
     </div>
   </div>
 </div>
</div>