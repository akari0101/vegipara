<div class="container col-lg-7">
  <h3><div class="d-inline mt-5 px-3 bg-light text-dark">新規会員登録</div></h3>
</div>

<br>

<div class="container col-lg-8 pt-5">
  <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <table class="table table-borderless">
    <tr>
      <div class="field">
        <td>名前</td>
        <td>(姓)</td>
        <td><%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", placeholder: "野菜" %></td>
        <td>(名)</td>
        <td><%= f.text_field :first_name, autocomplete: "given-name", placeholder: "うめか" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td>フリガナ</td>
        <td>(セイ)</td>
        <td><%= f.text_field :kana_last_name, autocomplete: "family-name", placeholder: "レイワ" %></td>
        <td>(メイ)</td>
        <td><%= f.text_field :kana_first_name, autocomplete: "given-name", placeholder: "ミチコ" %></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label :email, "メールアドレス" %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "munouyaku.no1@sample.com" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label '郵便番号(ハイフンなし)' %></td>
        <td></td>
        <td><%= f.text_field :post_code, autocomplete: "postal_code", placeholder: "0000000" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
    <tr>
      <td><%= f.label '住所' %></td>
      <td></td>
      <td><%= f.text_field :address, autocomplete: "street-address", class: "w-100", placeholder: "奈良県郡山市郡山町0-0" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <div class="field">
        <td><%= f.label '電話番号(ハイフンなし)' %></td>
        <td></td>
        <td><%= f.text_field :phone_number, autocomplete: "tel-local", placeholder: "00000000000" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
    <tr>
      <div class="field">
        <td>
          <%= f.label 'パスワード' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
    <%#= f.label :password, "パスワード(6文字以上)" %>
    <tr>
      <div class="field">
        <td><%= f.label 'パスワード(確認用)' %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
    <tr>
      <div class="actions">
        <td></td>
        <td></td>
        <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
        <td></td>
        <td></td>
      </div>
    </tr>
  </table>
<% end %>

<div class="container col-lg-7">
  <h3><div class="d-inline mt-5 px-3 bg-light text-dark">既に登録済みな方</div></h3>
</div>
<br>
<div class="container col-lg-6">
  <div>
  <a href="/customers/sign_in">こちら</a>　からログインしてください。
  </div>
</div>