<div class="container">
  <div class="row  mt-4">
    <h2>会員情報編集</h2>
  </div>

  <%= form_with model: @customer, url: customers_path, local: true do |f| %>
    <div class="row mt-3 ml-3">
      <div class="col-2"><%= f.label "氏名" %></div>
      <div class="col-3"><%= f.text_field :last_name %></div>
      <div class="col-3"><%= f.text_field :first_name %></div>
    </div>
    <div class="row mt-2 ml-3">
      <div class="col-2"><%= f.label "フリガナ" %></div>
      <div class="col-3"><%= f.text_field :kana_last_name %></div>
      <div class="col-3"><%= f.text_field :kana_first_name %></div>
    </div>
    <div class="row mt-2 ml-3">
      <div class="col-2"><%= f.label "郵便番号" %></div>
      <div class="col-3"><%= f.text_field :postal_code %></div>
    </div>
    <div class="row mt-2 ml-3">
      <div class="col-2"><%= f.label "住所" %></div>
      <div class="col-8"><%= f.text_field :address, class: "w-100" %></div>
    </div>
    <div class="row mt-2 ml-3">
      <div class="col-2"><%= f.label "電話番号" %></div>
      <div class="col-3"><%= f.text_field :telephone_number %></div>
    </div>
    <div class="row mt-2 ml-3">
      <div class="col-2"><%= f.label "メールアドレス" %></div>
      <div class="col-3"><%= f.text_field :email %></div>
    </div>

    <div class="row d-flex justify-content-center mt-3">
      <div class="col-3"><%= f.submit "編集内容を保存", class: "btn btn-success" %></div>
      <div class="col-3"><%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger" %></div>
    </div>
  <% end %>

</div>