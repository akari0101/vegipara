<div class="container">
  <div class="row mt-4">
    <h2>マイページ</h2>
  </div>

  <div class="row mt-3">
    <div class="col-2"><h4><strong>登録情報</strong></h4></div>
    <div class="col-2"><%= link_to "編集する", customers_edit_path(@customer), class: "btn btn-success" %></div>
  </div>

  <table class="col-6 table table-bordered mt-3 ml-3">
    <tr>
      <td class="col-3 table-active border-dark">氏名</td>
      <td class="border-dark"><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <td class="col-3 table-active border-dark">カナ</td>
      <td class="border-dark"><%= @customer.kana_last_name %> <%= @customer.kana_first_name %></td>
    </tr>
    <tr>
      <td class="col-3 table-active border-dark">郵便番号</td>
      <td class="border-dark"><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td class="col-3 table-active border-dark">住所</td>
      <td class="border-dark"><%= @customer.address %></td>
    </tr>
    <tr>
      <td class="col-3 table-active border-dark">電話番号</td>
      <td class="border-dark"><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td class="col-3 table-active border-dark">メールアドレス</td>
      <td class="border-dark"><%= @customer.email %></td>
    </tr>
  </table>

  <div class="row mt-3">
    <div class="col-2"><h4><strong>配送先</strong></h4></div>
    <div class="col-2"><%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %></div>
  </div>
  <div class="row mt-3">
    <div class="col-2"><h4><strong>注文履歴</strong></h4></div>
    <div class="col-2"><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></div>
  </div>

</div>