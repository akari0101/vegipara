<div class="container">
  <div class="row pt-5">
    <div class="col-lg-8 ml-auto">
      <h1>ログイン</h1>


        <%= form_with model: @customer, url: session_path(@customer), local: true do |f| %>
        <div class="row mt-2 ml-5">
          <%= f.label "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
        </div>

        <div class="row mt-2 ml-5">
          <div class="col-2"><%= f.label "パスワード" %><br /></div>
          <div class="col-5"><%= f.password_field :password, autocomplete: "current-password", class: "w-100" %></div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="row mt-2 ml-5">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="row mt-2 ml-5">
          <div class="col-2"></div>
          <div class="col-3"><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></div>
        </div>
        <% end %>

        <%#= render "customers/shared/links" %>

        <div class="row mt-3 ml-3">
          <h4>会員登録がお済みでない方</h4>
        </div>
        <div class="row mt-2 ml-5"><u><%= link_to "こちら", new_customer_registration_path %></u>
          から新規登録を行ってください。</div>
    </div>
  </div>
</div>