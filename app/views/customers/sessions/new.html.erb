<div class="container">
  <div class="row mt-4">
    <h2>ログイン</h2>
  </div>

  <%= form_with model: @customer, url: session_path(@customer), local: true do |f| %>
    <div class="row mt-3 ml-5">
      <div class="col-2"><%= f.label "メールアドレス" %></div><br />
      <div class="col-5"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %></div>
    </div>

    <div class="row mt-3 ml-5">
      <div class="col-2"><%= f.label "パスワード" %><br /></div>
      <div class="col-5"><%= f.password_field :password, autocomplete: "current-password", class: "w-100" %></div>
    </div>

        <% if devise_mapping.rememberable? %>
          <div class="row mt-3 ml-5">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="row mt-3 ml-5">
          <div class="col-2"></div>
          <div class="col-3"><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></div>
        </div>
        <% end %>

        <%#= render "customers/shared/links" %>

        <div class="row mt-3 ml-5">
          <h4>会員登録がお済みでない方</h4>
        </div>
        <div class="row mt-3 ml-5">><u><%= link_to "こちら", new_customer_registration_path %></u>
          から新規登録を行ってください。
        </div>
    </div>
</div>