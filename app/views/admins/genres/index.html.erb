<div class="container">
  <div class="row mt-4">
    <h2>ジャンル一覧・追加</h2>
  </div>

  <div class="row mt-3">
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
      <%= f.label "ジャンル名" %>
      <%= f.text_field :name, placeholder: "ジャンル名",class: "ml-5" %>
      <%= f.submit "新規登録", class: "btn btn-success ml-5" %>
    <% end %>
  </div>

  <table class="table col-4 mt-3">
    <thead>
      <tr>
        <th class="table-active text-center">ジャンル</th>
        <th class="table-active"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td class="align-middle"><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>