<h2>Log in</h2>

  <%= form_with model: @admin, url: session_path(@admin), local: true do |f| %>
    <div class="row mt-2 ml-5">
      <%= f.label "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
    </div>

    <div class="row mt-2 ml-5">
      <div class="col-2"><%= f.label "パスワード" %><br /></div>
      <div class="col-5"><%= f.password_field :password, autocomplete: "current-password", class: "w-100" %></div>
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <div class="row mt-2 ml-5">
    <div class="col-2"></div>
      <div class="col-3"><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></div>
    </div>
  </div>
<% end %>

<%= render "admins/shared/links" %>