<div class="container">
  <div class="row mt-4">
    <h2>注文一覧</h2>
  </div>

  <table class="table mt-3">
    <thead>
      <tr>
        <th class="table-active">購入日時</th>
        <th class="table-active">購入者</th>
        <th class="table-active">注文個数</th>
        <th class="table-active">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><u><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id)  %></u></td>
          <td><%= order.customer.full_name %></td>
          <td><%= order.order_details.sum(:amount) %></td>
          <td><%= order.status_i18n %></td> <!-- _i18nでenumを日本語化 -->
        </tr>
      <% end %>
    </tbody>
  </table>

</div>